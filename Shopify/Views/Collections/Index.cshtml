@{
    ViewBag.Title = "Index";
}

<h2>Shopify Collections</h2> 
@if (ViewBag.Collections == null || ViewBag.Collections.Count == 0)
{
 
    <p>There are no blogs yet.</p>
} else {
    <table>
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var blog in ViewBag.Collections)
    {
            <tr>
                <td>@Html.ActionLink("Edit", "Edit",new { id = blog.id })</td>
                <td>@Html.ActionLink("Delete", "Delete",new { id = blog.id })</td>
                <td>@blog.title</td>
            </tr>
    }
        </tbody>
    </table>
}

<p>@Html.ActionLink("Add Collections", "Create", "Collections")</p>